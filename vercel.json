{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "backend/server.mjs", "use": "@vercel/node" },
    { "src": "backend/cron/cron.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.mjs" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}

